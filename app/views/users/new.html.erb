<div class="container text-center p-5">
    <h1 class="mb-5">REGISTER</h1>

    <%= form_tag "/users", method: :post do %>

        <div class="form-group w-100 p-4">
            <%= text_field_tag :name , "", class: 'form-control input-lg h-100 p-4 text-center', placeholder:'Your name' %>
        </div>

        <div class="form-group w-100 p-4">
            <%= text_field_tag :email , "", class: 'form-control input-lg h-100 p-4 text-center', placeholder:'Your email' %>
        </div>

        <div class="form-group w-100 p-4">
            <%= password_field_tag :password, "", class: 'form-control input-lg h-100 p-4 text-center', placeholder:'Password' %>
        </div>

        <div class="form-group w-100 p-4">
            <%= password_field_tag :password_confirmation, "", class: 'form-control input-lg h-100 p-4 text-center', placeholder:'Confirm password' %>
        </div>
        

        <%= submit_tag "SIGN UP", class:'btn btn-success btn-lg' %>

    <% end %>
</div>