<div class="container text-center p-5">
    <h1 class="mb-5">Login</h1>

   <%= form_tag "/login", method: :post do %>

        <div class="form-group w-100 p-4">
            <%= text_field_tag :email , "", class: 'form-control input-lg h-100 p-4 text-center', placeholder:'Email' %>
        </div>

        <div class="form-group w-100 p-4">
            <%= password_field_tag :password, "", class: 'form-control input-lg h-100 p-4 text-center', placeholder:'Password' %>
        </div>

        <%= submit_tag "CONNEXION", class:'btn btn-success btn-lg' %>

    <% end %>
</div>