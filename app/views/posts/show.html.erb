<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-6 col-lg-6">
            <h1> <%= @post.title %> </h1>
        </div>
        
        <% if session[:admin] === true %>
            <div class="col-md-6 col-sm-6 col-lg-6 pr-5">
                <button class="btn btn-danger float-right">
                    <%= link_to  "Delete", post_path(@post), method: :delete, data: {confirm: "Do really want to delete this post ?"}%>
                </button>
                <button class="btn btn-primary float-right mr-2">
                    <%= link_to  "Edit", edit_post_path(@post) %>
                </button>
            </div>
        <% end %>

    </div>
    <h3 class="post-subtitle font-weight-light">
        <p> <%= @post.content %> </p>
    </h3>
